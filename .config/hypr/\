# Neochaotics - hyprland.conf
# Base configuration for Hyprland
# -----------------------------------------
# vim: set ft=hypr-config

# GENERAL VARIABLES
# -----------------

# Background and Monitor Definitions
$background = /home/quinno/.config/wallpapers/dracula-waves-44475a.png
$M1 = HDMI-A-1 #desc:Acer Technologies KA242Y 72380E77E3W01
$M2 = DP-5 #desc:VIZIO, Inc D24h-G9

# SOURCES
# -----------------

source=~/.config/hypr/hyprland-games.conf
source=~/.config/hypr/hyprland-binds.conf
source=~/.config/hypr/hyprland-windowrules.conf 
source=~/.config/hypr/hyprland-theme.conf

# MONITORS
# -----------------

monitor=,preferred,auto,auto
monitor=$M1,1920x1080@75,-1920x-156,1
monitor=$M2,1366x768@60,auto,1

# WORKSPACES
# -----------------
workspace=$M1, 1
workspace=$M1, 3
workspace=$M1, 5
workspace=$M1, 7
workspace=$M1, 9
workspace=$M2, 2
workspace=$M2, 4
workspace=$M2, 6
workspace=$M2, 8
workspace=$M2, 10

# EXEC
# -----------------

# System Initialization
exec-once=dunst # Notifications
exec-once=/usr/lib/polkit-kde-authentication-agent-1 # KDE Polkit
exec-once=swww init && swww img $background # Background

# Application Launches
exec-once=eww d # Bar stuff

# ENVIRONMENT
env=GDK_BACKEND=wayland,x11 # GTK Wayland
env=QT_QPA_PLATFORM="wayland;xcb" # Qt Wayland
env=SDL_VIDEODRIVER=wayland # SDL2 Wayland
env=CLUTTER_BACKEND=wayland # Clutter Wayland
env=WLR_DRM_NO_ATOMIC,1

# INPUT CONFIGURATIONS
input {
    kb_layout = us  # Appropriate XKB keymap parameter.
    numlock_by_default = true # Engage numlock by default.

    repeat_rate = 25  # Repeat rate for held-down keys, in repeats per second.
    repeat_delay = 600  # Delay before a held-down key is repeated, in milliseconds.

    sensitivity = 0 # Sets the mouse input sensitivity (clamped to -1.0 to 1.0).
    accel_profile = flat  # Sets cursor acceleration profile (adaptive, flat, or custom).

    follow_mouse = 2  # Cursor focus will be detached from keyboard focus. Clicking on a window will move keyboard focus to that window.
    float_switch_override_focus = 2 # Focus behavior on float-to-tile and vice versa (0, 1, or 2).
}

# LAYOUT CONFIGURATIONS
general:layout = dwindle

dwindle {
  no_gaps_when_only = 0
  pseudotile = true # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
  #smart_split = true
  smart_resizing = true
  preserve_split = true # you probably want this
}
